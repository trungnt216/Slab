@model IEnumerable<SaRLAB.Models.Entity.User>

@{
    ViewData["Title"] = "GetAll_Technical";
    Layout = "~/Views/HomePage/_LayoutHomePage.cshtml";
    ViewBag.TitleCustom = "Danh sách tổ kỹ thuật";
    int counter = 1;
}

<div id="sub-content">
    <div class="container">
        <div class="row">
            <div class="col-12 table-container">
                <partial name="_TitleCustom">
                <div class="table-action d-flex justify-content-between">
                    <partial name="_SearchBox" />
                    <a class="btn-custom-create" type="button" asp-controller="Chemistry" asp-action="Create_Technical">
                        <i class="fa-solid fa-plus"></i>
                        Thêm mới
                    </a>
                </div>
                <div id="popupNotification" class="alert alert-danger">
                    @TempData["notice"]
                </div>
                <div id="popupNotification" class="alert alert-danger">
                    @TempData["errorMessage"]
                </div>
                <table id="table" class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th class="d-none">
                                @Html.DisplayNameFor(model => model.ID)
                            </th>
                            <th>
                                Tên
                                <i class="fa fa-sort" onclick="sortTable('table', 2)"></i>
                            </th>
                            <th class="d-none">
                                @Html.DisplayNameFor(model => model.Password)
                            </th>
                            <th>
                                Email
                                <i class="fa fa-sort" onclick="sortTable('table', 4)"></i>
                            </th>
                            <th>
                                Số điện thoại
                            </th>
                            <th>
                                Ngày sinh
                            </th>
                            <th class="d-none">
                                @Html.DisplayNameFor(model => model.CreateBy)
                            </th>
                            <th class="d-none">
                                @Html.DisplayNameFor(model => model.UpdateBy)
                            </th>
                            <th class="d-none">
                                @Html.DisplayNameFor(model => model.CreateTime)
                            </th>
                            <th class="d-none">
                                @Html.DisplayNameFor(model => model.AvtPath)
                            </th>
                            <th class="d-none">
                                @Html.DisplayNameFor(model => model.SchoolId)
                            </th>
                            <th class="d-none">
                                @Html.DisplayNameFor(model => model.Role_ID)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody id="tableBody">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @counter
                                </td>
                                <td class="d-none">
                                    @Html.DisplayFor(modelItem => item.ID)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td class="d-none">
                                    @Html.DisplayFor(modelItem => item.Password)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Phone)
                                </td>
                                @{
                                    var formattedDateOfBirth = item.DateOfBirth.ToString("dd/MM/yyyy");
                                }
                                <td>
                                    @formattedDateOfBirth
                                </td>
                                <td class="d-none">
                                    @Html.DisplayFor(modelItem => item.CreateBy)
                                </td>
                                <td class="d-none">
                                    @Html.DisplayFor(modelItem => item.UpdateBy)
                                </td>
                                <td class="d-none">
                                    @Html.DisplayFor(modelItem => item.CreateTime)
                                </td>
                                <td class="d-none">
                                    @Html.DisplayFor(modelItem => item.AvtPath)
                                </td>
                                <td class="d-none">
                                    @Html.DisplayFor(modelItem => item.SchoolId)
                                </td>
                                <td class="d-none">
                                    @Html.DisplayFor(modelItem => item.Role_ID)
                                </td>
                                <td>
                                    <a class="btn-custom-view-detail" asp-action="Details_Technical" asp-route-id="@item.ID">
                                        <i class="fa-solid fa-eye"></i>
                                    </a>
                                    <a class="btn-custom-edit" asp-action="Edit_Technical" asp-route-id="@item.ID">
                                        <i class="fa-solid fa-pen-to-square"></i>
                                    </a>
                                    <a class="btn-custom-delete" asp-action="Delete_Technical" asp-route-id="@item.ID">
                                        <i class="fa-solid fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                            counter++;
                        }
                    </tbody>
                </table>
                @if (Model == null || !Model.Any())
                {
                    <p class="text-danger" style="text-align: center; font-style: italic; font-weight: 500;">Không có dữ liệu!</p>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/table.js"></script>
}
