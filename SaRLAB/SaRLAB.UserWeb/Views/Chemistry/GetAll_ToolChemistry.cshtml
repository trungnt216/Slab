@model IEnumerable<SaRLAB.Models.Entity.Equipment>

@{
    ViewData["Title"] = "GetAll_ToolChemistry";
    Layout = "~/Views/HomePage/_LayoutHomePage.cshtml";
    ViewBag.TitleCustom = "Danh sách dự trù dụng cụ";
    int counter = 1;
}

<style>
    #popupNotification {
        position: fixed;
        top: 20px;
        right: 20px;
        z-index: 1000;
        max-width: 300px;
        border: 2px solid #b1787d;
        font-weight: 500;
        font-style: italic;
        opacity: 0;
        transition: all 0.2s ease-in-out;
    }

    #popupNotification.show {
        right: 20px;
        opacity: 1;
    }

    #popupNotification.hide {
        right: -300px;
        opacity: 0;
    }
</style>

<div id="sub-content">
    <div class="container">
        <div class="row">
            <div class="col-12 table-container">
                <div class="table-action d-flex justify-content-between">
                    <partial name="_TitleCustom">
                    <a class="btn-custom-create" type="button" asp-controller="Chemistry" asp-action="Create_ToolChemistry">
                        <i class="fa-solid fa-plus"></i>
                        Thêm mới
                    </a>
                </div>
                <div id="popupNotification" class="alert alert-danger">
                    @TempData["notice"]
                </div>
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th class="d-none">
                                @Html.DisplayNameFor(model => model.ID)
                            </th>
                            <th>
                                Tên
                            </th>
                            <th class="d-none">
                                @Html.DisplayNameFor(model => model.CreateBy)
                            </th>
                            <th class="d-none">
                                @Html.DisplayNameFor(model => model.CreateTime)
                            </th>
                            <th class="d-none">
                                @Html.DisplayNameFor(model => model.UpdateBy)
                            </th>
                            <th>
                                Thời gian cập nhật
                            </th>
                            <th>
                                Thời gian hết hạn
                            </th>
                            <th class="d-none">
                                @Html.DisplayNameFor(model => model.Type)
                            </th>
                            <th class="d-none">
                                Nhận xét
                            </th>
                            <th class="d-none">
                                @Html.DisplayNameFor(model => model.ImagePath)
                            </th>
                            <th class="d-none">
                                @Html.DisplayNameFor(model => model.SubjectId)
                            </th>
                            <th class="d-none">
                                @Html.DisplayNameFor(model => model.SchoolId)
                            </th>
                            <th>
                                Số lượng
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model) {
                            <tr>
                                <td>
                                    @counter
                                </td>
                                <td class="d-none">
                                    @Html.DisplayFor(modelItem => item.ID)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td class="d-none">
                                    @Html.DisplayFor(modelItem => item.CreateBy)
                                </td>
                                <td class="d-none">
                                    @Html.DisplayFor(modelItem => item.CreateTime)
                                </td>
                                <td class="d-none">
                                    @Html.DisplayFor(modelItem => item.UpdateBy)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UpdateTime)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ExpiredTime)
                                </td>
                                <td class="d-none">
                                    @Html.DisplayFor(modelItem => item.Type)
                                </td>
                                <td class="d-none">
                                    @Html.DisplayFor(modelItem => item.Remark)
                                </td>
                                <td class="d-none">
                                    @Html.DisplayFor(modelItem => item.ImagePath)
                                </td>
                                <td class="d-none">
                                    @Html.DisplayFor(modelItem => item.SubjectId)
                                </td>
                                <td class="d-none">
                                    @Html.DisplayFor(modelItem => item.SchoolId)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.EquipmentQuantity)
                                </td>
                                <td>
                                    <a class="btn-custom-view-detail" asp-action="Details_ToolChemistry" asp-route-id="@item.ID">
                                        <i class="fa-solid fa-eye"></i>
                                    </a>
                                    <a class="btn-custom-edit" asp-action="Edit_ToolChemistry" asp-route-id="@item.ID">
                                        <i class="fa-solid fa-pen-to-square"></i>
                                    </a>
                                    <a class="btn-custom-delete" asp-action="Delete_ToolChemistry" asp-route-id="@item.ID">
                                        <i class="fa-solid fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                             counter++;
                            }
                    </tbody>
                </table>
                @if (Model == null || !Model.Any())
                {
                    <p class="text-danger" style="text-align: center; font-style: italic; font-weight: 500;">Không có dữ liệu!</p>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var popupNotification = document.getElementById('popupNotification');
            if (popupNotification.textContent.trim() !== "") {
                popupNotification.classList.add('show');

                setTimeout(function () {
                    popupNotification.classList.remove('show');
                    popupNotification.classList.add('hide');
                    popupNotification.addEventListener('transitionend', function () {
                        popupNotification.style.display = 'none';
                        popupNotification.classList.remove('hide');
                    }, { once: true });
                }, 1000);
            }
        });
    </script>
}

