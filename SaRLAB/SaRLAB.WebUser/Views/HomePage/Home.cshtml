                                        @if (@ViewBag.school.BackupSubject6Logo == null)
                                        {
                                            <img src="@Url.Content("~/images/book.png")" class="image" alt="" />
                                        }
                                        else
                                        {
                                            <img src="@Url.Content(ViewBag.school.BackupSubject6Logo)" class="image" alt="" />
                                        }
                                        <h4>@TempData["subject_6"]</h4>
                                    </div>
                                </a>
                            </div>
                        }

                    </div>

                </div>
            </div>
        </div>

        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.min.js"></script>

        <script type="text/javascript">
            $(document).ready(function () {
                var $carousel = $('.service-carousel');
                var itemCount = $carousel.children('.flex-item').length;

                $carousel.slick({
                    infinite: true,
                    slidesToShow: 4,
                    slidesToScroll: 4,
                    dots: itemCount > 4, 
                    arrows: true,
                    responsive: [
                        {
                            breakpoint: 1200,
                            settings: {
                                slidesToShow: 4,
                                slidesToScroll: 4,
                                dots: itemCount > 4
                            }
                        },
                        {
                            breakpoint: 992,
                            settings: {
                                slidesToShow: 3,
                                slidesToScroll: 3,
                                dots: itemCount > 3
                            }
                        },
                        {
                            breakpoint: 768,
                            settings: {
                                slidesToShow: 2,
                                slidesToScroll: 2,
                                dots: itemCount > 2
                            }
                        },
                        {
                            breakpoint: 576,
                            settings: {
                                slidesToShow: 1,
                                slidesToScroll: 1,
                                dots: itemCount > 1,
                                arrows: false,
                                centerMode: true,
                                centerPadding: '0px'
                            }
                        }
                    ]
                });
            });

            document.addEventListener("DOMContentLoaded", function () {
                var serviceItems = document.querySelectorAll('.service-item');

                serviceItems.forEach(function (item) {
                    var h4Text = item.querySelector('h4').textContent.trim();
                    var tooltipDiv = document.createElement('div');
                    tooltipDiv.className = 'subject-tooltip';
                    tooltipDiv.innerHTML = '<span class="subjectTooltipText">' + h4Text + '</span>';
                    item.appendChild(tooltipDiv);
                });
            });
        </script>
    </body>
</html>