                                    <div class="service-item fourth-service">
                                        @if (@ViewBag.school.BackupSubject3Logo == null)
                                        {
                                            <img src="@Url.Content("~/images/book.png")" class="image" alt="" />
                                        }
                                        else
                                        {
                                            <img src="@Url.Content(ViewBag.school.BackupSubject3Logo)" class="image" alt="" />
                                        }
                                        <h4>@TempData["subject_3"]</h4>
                                    </div>
                                </a>
                            </div>
                        }

                        @if (ViewBag.SubjectFlag.BackupSubject4PermissionFlag == true)
                        {
                            <div class="flex-item">
                                <a asp-controller="MultipleQuestions" asp-action="GetAllQuestion_Subject4" class="service-link">
                                    <div class="service-item fourth-service">
                                        @if (@ViewBag.school.BackupSubject4Logo == null)
                                        {
