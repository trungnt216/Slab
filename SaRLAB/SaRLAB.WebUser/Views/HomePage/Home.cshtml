                        }

                        @if (ViewBag.SubjectFlag.BackupSubject6PermissionFlag == true)
                        {
                            <div class="flex-item">
                                <a asp-controller="MultipleQuestions" asp-action="GetAllQuestion_Subject6" class="service-link">
