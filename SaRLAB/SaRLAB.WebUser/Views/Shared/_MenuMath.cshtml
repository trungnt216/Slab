    @* info group *@
    <li class="scroll-to-section menu-info-group">
        <a class="menu d-flex" asp-controller="HomePage" asp-action="Information">
            @if (TempData["AvtPath"] != null)
            {
                <img src="@Url.Content(TempData["AvtPath"].ToString())" />
            }
            <div class="info-user">
                <p class="name">@TempData["name"]</p>
                <p class="role">@TempData["role"]</p>
