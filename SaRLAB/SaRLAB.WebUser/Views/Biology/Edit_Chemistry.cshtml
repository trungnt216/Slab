@model SaRLAB.Models.Entity.Equipment

@{
    ViewData["Title"] = "Edit_Chemistry";
    Layout = "~/Views/Biology/_Layout.cshtml";
    ViewBag.TitleCustom = "Chỉnh sửa hóa chất";
}

<div id="sub-content">
    <div class="container">
        <div class="row">
            <div class="col-12 edit-container">
                <div class="edit-action d-flex justify-content-between">
                    <partial name="_TitleCustom">
                        <a asp-area="" asp-controller="Biology" asp-action="GetAll_Chemistry" class="btn-custom-return"
                            type="button">
                        <i class="fa-solid fa-angles-left"></i>
                        Trở về
                    </a>
                </div>
                <form asp-action="Edit_Chemistry" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="col-12 col-md-4">
                            <div class="form-group d-none">
                                <label asp-for="ID" class="control-label"></label>
                                <input asp-for="ID" class="form-control" />
                                <span asp-validation-for="ID" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <div class="title d-flex">
                                    <i class="fa-solid fa-file-signature"></i>
                                    <label asp-for="Name" class="control-label">Tên</label>
                                </div>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group d-none">
                                <label asp-for="CreateBy" class="control-label"></label>
                                <input asp-for="CreateBy" class="form-control" />
                                <span asp-validation-for="CreateBy" class="text-danger"></span>
                            </div>
                            <div class="form-group d-none">
                                <label asp-for="CreateTime" class="control-label"></label>
                                <input asp-for="CreateTime" class="form-control" />
                                <span asp-validation-for="CreateTime" class="text-danger"></span>
                            </div>
                            <div class="form-group d-none">
                                <label asp-for="UpdateBy" class="control-label"></label>
                                <input asp-for="UpdateBy" class="form-control" />
                                <span asp-validation-for="UpdateBy" class="text-danger"></span>
                            </div>
                            <div class="form-group d-none">
                                <label asp-for="UpdateTime" class="control-label"></label>
                                <input asp-for="UpdateTime" class="form-control" />
                                <span asp-validation-for="UpdateTime" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <div class="title d-flex">
                                    <i class="fa-solid fa-clock"></i>
                                    <label asp-for="ExpiredTime" class="control-label">Thời gian hết hạn</label>
                                </div>
                                <input asp-for="ExpiredTime" class="form-control" />
                                <span asp-validation-for="ExpiredTime" class="text-danger"></span>
                            </div>
                            <div class="form-group d-none">
                                <label asp-for="Type" class="control-label"></label>
                                <input asp-for="Type" class="form-control" />
                                <span asp-validation-for="Type" class="text-danger"></span>
                            </div>
                            <div class="form-group d-none">
                                <label asp-for="ImagePath" class="control-label"></label>
                                <input asp-for="ImagePath" class="form-control" />
                                <span asp-validation-for="ImagePath" class="text-danger"></span>
                            </div>
                            <div class="form-group d-none">
                                <label asp-for="SubjectId" class="control-label"></label>
                                <input asp-for="SubjectId" class="form-control" />
                                <span asp-validation-for="SubjectId" class="text-danger"></span>
                            </div>
                            <div class="form-group d-none">
                                <label asp-for="SchoolId" class="control-label"></label>
                                <input asp-for="SchoolId" class="form-control" />
                                <span asp-validation-for="SchoolId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <div class="title d-flex">
                                    <i class="fa-solid fa-inbox"></i>
                                    <label asp-for="EquipmentQuantity" class="control-label">Số lượng</label>
                                </div>
                                <input asp-for="EquipmentQuantity" class="form-control" type="number" min="0" />
                                <span asp-validation-for="EquipmentQuantity" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <div class="title d-flex">
                                    <i class="fa-solid fa-tag"></i>
                                    <label asp-for="Property" class="control-label">Đặc tính</label>
                                </div>
                                <select asp-for="Property" class="select">
                                    <option value="poison">Độc</option>
                                    <option value="nonpoison">Không độc</option>
                                </select>
                                <span asp-validation-for="Property" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <div class="title d-flex">
                                    <i class="fa-solid fa-barcode"></i>
                                    <label asp-for="From" class="control-label">Xuất xứ</label>
                                </div>
                                <input asp-for="From" class="form-control" />
                                <span asp-validation-for="From" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <div class="title d-flex">
                                    <i class="fa-solid fa-comment"></i>
                                    <label asp-for="Remark" class="control-label">Nhận xét</label>
                                </div>
                                <textarea asp-for="Remark" class="form-control" rows="8" cols="50"></textarea>
                                <span asp-validation-for="Remark" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-12 col-md-8">
                            <div class="form-group">
                                <div class="title d-flex">
                                    <i class="fa-solid fa-file"></i>
                                    <label for="File"> Chọn file</label>
                                </div>
                                <input type="file" id="File" name="File" class="form-control-file" />
                            </div>
                            <div class="file-detail">
                                <div id="fileDisplay">
                                    @if (string.IsNullOrEmpty(Model.ImagePath))
                                    {
                                        <span style="color: #5d6975; font-style: italic; padding-left: 25px;">Không có sẵn file nào!</span>
                                    }
                                    else
                                    {
                                        string path = Model.ImagePath;
                                        string extension = System.IO.Path.GetExtension(path).ToLower();

                                        if (extension == ".jpg" || extension == ".jpeg" || extension == ".png" || extension == ".gif")
                                        {
                                            <img src="@path" alt="Image" style="max-width: 100%; height: auto;" />
                                        }
                                        else if (extension == ".mp4" || extension == ".webm" || extension == ".ogg")
                                        {
                                            <video width="100%" height="auto" controls>
                                                <source src="@path" type="video/@extension.Substring(1)">
                                                Your browser does not support the video tag.
                                            </video>
                                        }
                                        else if (extension == ".pdf")
                                        {
                                            <object class="pdf" data="@path" width="100%" height="800"></object>
                                        }
                                        else
                                        {
                                            @Html.DisplayFor(model => model.ImagePath)
                                        }
                                    }
                                </div>
                                <div>
                                    <span id="errorFile" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Cập nhật" class="btn btn-primary" />
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <script>
        document.getElementById('File').addEventListener('change', function (event) {
            var file = event.target.files[0];
            var fileDisplay = document.getElementById('fileDisplay');
            var fileURL = URL.createObjectURL(file);
            var extension = file.name.split('.').pop().toLowerCase();

            fileDisplay.innerHTML = '';

            if (['jpg', 'jpeg', 'png', 'gif'].includes(extension)) {
                var img = document.createElement('img');
                img.src = fileURL;
                img.style.maxWidth = '100%';
                img.style.height = 'auto';
                fileDisplay.appendChild(img);
                document.getElementById('errorFile').innerText = "";
            } else if (['mp4', 'webm', 'ogg'].includes(extension)) {
                var video = document.createElement('video');
                video.src = fileURL;
                video.style.maxWidth = '100%';
                video.style.height = 'auto';
                video.controls = true;
                fileDisplay.appendChild(video);
                document.getElementById('errorFile').innerText = "";
            } else if (extension === 'pdf') {
                var object = document.createElement('object');
                object.data = fileURL;
                object.width = '100%';
                object.height = '800px';
                fileDisplay.appendChild(object);
                document.getElementById('errorFile').innerText = "";
            } else {
                document.getElementById('errorFile').innerText = "Vui lòng chọn một file hợp lệ!";
            }
        });

        document.querySelector("form").addEventListener("submit", function (event) {
            var fileInput = document.getElementById('File');
            var file = fileInput.files[0];
            if (file) {
                var extension = file.name.split('.').pop().toLowerCase();
                var supportedExtensions = ['jpg', 'jpeg', 'png', 'gif', 'mp4', 'webm', 'ogg', 'pdf'];
                if (!supportedExtensions.includes(extension)) {
                    document.getElementById('errorFile').innerText = "Vui lòng chọn một file hợp lệ!";
                    event.preventDefault();
                } else {
                    document.getElementById('errorFile').innerText = "";
                }
            }
        });
    </script>
}
