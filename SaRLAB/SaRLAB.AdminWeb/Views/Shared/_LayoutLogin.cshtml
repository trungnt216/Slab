@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    IgnoreSection("Scripts");
}

<div class="container">
    <div class="forms-container">
        <div class="signin-signup">
            @RenderBody()
        </div>
    </div>

    <div class="panels-container">
        <div class="panel left-panel">
            <div class="content">
                <h3>Bạn chưa có tài khoản?</h3>
                <p class="description">
                    Trở thành thành viên của SaRLAB để khám phá những tính năng thú vị!
                </p>
                <button class="btn transparent" id="sign-up-btn">
                    Đăng ký
                </button>
            </div>
            <img src="@Url.Content("~/images/login.svg")" class="image" alt="" />
        </div>
        <div class="panel right-panel">
            <div class="content">
                <h3>Bạn đã có tài khoản?</h3>
                <p class="description">
                    Đăng nhập ngay cùng SaRLAB!
                </p>
                <button class="btn transparent" id="sign-in-btn">
                    Đăng nhập
                </button>
            </div>
            <img src="@Url.Content("~/images/register.svg")" class="image" alt="" />
        </div>
    </div>
</div>
