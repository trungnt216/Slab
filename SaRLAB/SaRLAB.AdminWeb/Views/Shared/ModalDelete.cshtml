<div id="deleteModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog .modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Xác nhận xóa</h5>
            </div>
            <div class="modal-body">
                Bạn có chắc chắn muốn xóa không?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn-custom-delete-cancel btn btn-secondary" data-dismiss="modal">Đóng</button>
                <a type="button" class="btn-custom-delete btn btn-danger" title="Delete" data-toggle="modal" data-target="#deleteModal" 
                    asp-action=@ViewBag.DeleteAction>
                    Xóa
                </a>
            </div>
        </div>
    </div>
</div>
