@model SaRLAB.Models.Entity.Banner

@{
    ViewBag.TitleCustom = "Thêm mới banner";
    Layout = "~/Views/Home/_LayoutHome.cshtml";
}

<div id="sub-content">
    <div class="d-flex justify-content-between">
        <partial name="TitleCustom">
        <partial name="ButtonReturn">
    </div>
    <div class="form-container">
        <form asp-action="InsertBanner" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <label for="chooseImg" class="col-2 form-label">Chọn file</label>
                <div class="col">
                    <input id="imgInp" accept="image/*" name="FileImage" class="form-control" type="file" />
                </div>
            </div>
@*             <img src="@Url.Content("~/images/placehold.png")" id="blah" alt="Banner"
                 style="width: 100px; height: 100px; border: 1px solid red; " /> *@
            <div class="form-group">
                <input type="submit" value="Thêm mới" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
