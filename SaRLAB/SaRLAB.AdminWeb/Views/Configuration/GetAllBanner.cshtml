@model SaRLAB.Models.Entity.School

@{
    ViewData["Title"] = "GetAllBanner";
    Layout = "~/Views/Home/_LayoutHome.cshtml";
}

<h1>GetAllBanner</h1>

<h4>School</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="GetAllBanner" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group d-none">
                <label asp-for="ID" class="control-label"></label>
                <input asp-for="ID" class="form-control" />
                <span asp-validation-for="ID" class="text-danger"></span>
            </div>
            <div class="form-group d-none">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group d-none">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group d-none">
                <label asp-for="ChemLogo" class="control-label"></label>
                <input asp-for="ChemLogo" class="form-control" />
                <span asp-validation-for="ChemLogo" class="text-danger"></span>
            </div>
            <input type="file" id="FileChemLogo" name="FileChemLogo" class="form-control-file" />
            <div class="form-group d-none">
                <label asp-for="BioLogo" class="control-label"></label>
                <input asp-for="BioLogo" class="form-control" />
                <span asp-validation-for="BioLogo" class="text-danger"></span>
            </div>
            <input type="file" id="FileBioLogo" name="FileBioLogo" class="form-control-file" />
            <div class="form-group d-none">
                <label asp-for="PhysLogo" class="control-label"></label>
                <input asp-for="PhysLogo" class="form-control" />
                <span asp-validation-for="PhysLogo" class="text-danger"></span>
            </div>
            <input type="file" id="FilePhysLogo" name="FilePhysLogo" class="form-control-file" />
            <div class="form-group d-none">
                <label asp-for="BiochemLogo" class="control-label"></label>
                <input asp-for="BiochemLogo" class="form-control" />
                <span asp-validation-for="BiochemLogo" class="text-danger"></span>
            </div>
            <input type="file" id="FileBiochemLogo" name="FileBiochemLogo" class="form-control-file" />
            <div class="form-group d-none">
                <label asp-for="Banner" class="control-label"></label>
                <input asp-for="Banner" class="form-control" />
                <span asp-validation-for="Banner" class="text-danger"></span>
            </div>
            <input type="file" id="FileBanner" name="FileBanner" class="form-control-file" />
            <div class="form-group d-none">
                <label asp-for="SchoolLogo" class="control-label"></label>
                <input asp-for="SchoolLogo" class="form-control" />
                <span asp-validation-for="SchoolLogo" class="text-danger"></span>
            </div>
            <input type="file" id="FileLogoSchool" name="FileLogoSchool" class="form-control-file" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
