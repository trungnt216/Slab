@model IEnumerable<SaRLAB.Models.Entity.Banner>

@{
    ViewData["Title"] = "GetAllBanner";
    ViewBag.TitleCustom = "Danh sách banners";
    Layout = "~/Views/Home/_LayoutHome.cshtml";
    int counter = 1;
}

<div id="sub-content">
    <partial name="TitleCustom">
        <div class="table-container">
            <div class="table-action row">
                <div class="col-8">
                    <div class="search-box">
                        <i class="fa-solid fa-magnifying-glass"></i>
                        <input type="text" class="form-control" placeholder="Search&hellip;">
                    </div>
                </div>
                <div class="col-4">
                    <button id="deleteSelected" class="btn btn-danger" data-toggle="modal" data-target="#deleteModal">
                        <i class="fa-solid fa-trash-can"></i>
                        Xóa
                    </button>
                    <partial name="ButtonCreate">
                </div>
            </div>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            <input type="checkbox" id="selectAll" />
                        </th>
                        <th>#</th>
                        <th class="d-none">
                            @Html.DisplayNameFor(model => model.ID)
                        </th>
                        <th>
                            @* @Html.DisplayNameFor(model => model.PathImage) *@
                            Hình ảnh
                        </th>
                        <th>
                            @* @Html.DisplayNameFor(model => model.CreateBy) *@
                            Người tạo
                        </th>
                        <th>
                            @* @Html.DisplayNameFor(model => model.CreateTime) *@
                            Thời gian tạo
                        </th>
                        <th class="d-none">
                            @Html.DisplayNameFor(model => model.UpdateBy)
                        </th>
                        <th class="d-none">
                            @Html.DisplayNameFor(model => model.UpdateTime)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <input type="checkbox" class="selectRow" data-id="@item.ID" />
                            </td>
                            <td>
                                @counter
                            </td>
                            <td class="d-none">
                                @Html.DisplayFor(modelItem => item.ID)
                            </td>
                            <td>
                                @* @Html.DisplayFor(modelItem => item.PathImage) *@
                                <img src="@Url.Content("https://d3design.vn/uploads/5495874gh6y5356.jpg")"
                                    style="max-width: 100px; max-height: 100px;" />
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CreateBy)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CreateTime)
                            </td>
                            <td class="d-none">
                                @Html.DisplayFor(modelItem => item.UpdateBy)
                            </td>
                            <td class="d-none">
                                @Html.DisplayFor(modelItem => item.UpdateTime)
                            </td>
                            <td>
                                <a class="edit" href="@Url.Action("EditBanner", new { id = item.ID })" title="Edit">
                                    <i class="fa-solid fa-pen-to-square"></i>
                                </a>
                                <a class="delete" href="@Url.Action("DeleteBanner", new { id = item.ID })" title="Delete">
                                    <i class="fa-solid fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                        counter++;
                    }
                </tbody>
            </table>
        </div>
        <partial name="ModalDelete">
</div>
