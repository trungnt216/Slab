@model SaRLAB.Models.Entity.Banner

@{
    ViewData["Title"] = "EditBanner";

    ViewBag.TitleCustom = "Chỉnh sửa banner";

    Layout = "~/Views/Home/_LayoutHome.cshtml";
}


<div id="sub-content">
    <div class="d-flex justify-content-between">
        <partial name="TitleCustom">
            <a asp-area="" asp-controller="Configuration" asp-action="GetAllBanner" class="btn-custom-return"
                type="button">
                <i class="fa-solid fa-angles-left"></i>
                Trở về
            </a>
    </div>
    <div class="form-container">
        <form asp-action="EditBanner" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group d-none">
                <label asp-for="ID" class="control-label"></label>
                <input asp-for="ID" class="form-control" />
                <span asp-validation-for="ID" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label for="FileImage" class="col-3 form-label">Chọn file</label>
                <div class="col">
                    <input id="FileImage" accept="image/*" name="FileImage" class="form-control" type="file" />
                </div>
            </div>
            <div class="form-group row">
                <label class="col-3 form-label"></label>
                <div class="col">
                    @{
                        string url = "";



                        if (string.IsNullOrEmpty(Model.PathImage))



                        {



                            url = "~/images/placehold.png";



                        }



                        else



                        {



                            url = Model.PathImage;



                        }
                    }
                    <img id="previewImage" src="@Url.Content(url)" style="width: 300px;
                                height: 200px;
                                margin-top: -15px;
                                border: 3px solid #eeeeee;
                                border-radius: 15px;
                                object-fit: cover" />
                </div>
            </div>
            <div class="form-group d-none">
                <label asp-for="PathImage" class="control-label"></label>
                <input asp-for="PathImage" class="form-control" />
                <span asp-validation-for="PathImage" class="text-danger"></span>
            </div>
            <div class="form-group d-none">
                <label asp-for="CreateBy" class="control-label"></label>
                <input asp-for="CreateBy" class="form-control" />
                <span asp-validation-for="CreateBy" class="text-danger"></span>
            </div>
            <div class="form-group d-none">
                <label asp-for="CreateTime" class="control-label"></label>
                <input asp-for="CreateTime" class="form-control" />
                <span asp-validation-for="CreateTime" class="text-danger"></span>
            </div>
            <div class="form-group d-none">
                <label asp-for="UpdateBy" class="control-label"></label>
                <input asp-for="UpdateBy" class="form-control" />
                <span asp-validation-for="UpdateBy" class="text-danger"></span>
            </div>
            <div class="form-group d-none">
                <label asp-for="UpdateTime" class="control-label"></label>
                <input asp-for="UpdateTime" class="form-control" />
                <span asp-validation-for="UpdateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cập nhật" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('FileImage').addEventListener('change', function (event) {
            var file = event.target.files[0];
            console.log(file);
            if (file) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    document.getElementById('previewImage').src = e.target.result;
                };
                reader.readAsDataURL(file);
            }
        });
    </script>

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
