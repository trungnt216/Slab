                <div class="col">
                    <div>
                        <input type="radio" id="textB" name="optionTypeB" value="text" onclick="toggleOptionInput('text','B')" @(isOptionBText ? "checked" : "")>
                        <label for="textB">Text</label>
                        <input type="radio" id="imageB" name="optionTypeB" value="image" onclick="toggleOptionInput('image', 'B')" @(!isOptionBText ? "checked" : "")>
                        <label for="imageB">Hình ảnh</label>
                    </div>
                </div>
            </div>
            <div id="textOptionB" class="form-group row @(isOptionBText ? "" : "hidden")">
                <label asp-for="OptionB" class="col-6 form-label">Đáp án B</label>
                <div class="col">
                    <input asp-for="OptionB" id="textOptionInputB" class="form-control" placeholder="Nhập đáp án" />
                    <span asp-validation-for="OptionB" class="text-danger form-text"></span>
                </div>
            </div>
            <div id="imageOptionB" class="form-group row @(!isOptionBText ? "" : "hidden")">
                <div class="form-group row">
                    <label for="File" class="col-6 form-label"> Chọn hình ảnh cho đáp án B</label>
                    <div class="col-6">
                        <input type="file" id="OptionBFile" name="OptionBFile" class="form-control-file" accept="image/*" />
                    </div>
