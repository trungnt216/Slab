        <partial name="TitleCustom">
        <a asp-area="" asp-controller="Chemistry" asp-action="GetAll_Question" class="btn-custom-return" type="button">
            <i class="fa-solid fa-angles-left"></i>
            Trở về
        </a>
        <a asp-area="" asp-controller="Chemistry" asp-action="GetAll_Question" class="btn-custom-return btn-custom-return-trigger" type="button">
            <i class="fa-solid fa-angles-left"></i>
        </a>
    </div>
