                <label asp-for="Question" class="col-6 form-label">Nội dung câu hỏi</label>
                <div class="col-6">
                    <input asp-for="Question" class="form-control" placeholder="Nhập câu hỏi" />
                    <span asp-validation-for="Question" class="text-danger form-text"></span>
                </div>
            </div>
            <div class="form-group row">
                <label for="File" class="col-6 form-label"> Chọn hỉnh ảnh cho câu hỏi (Nếu có)</label>
                <div class="col-6">
                    <input type="file" id="QuestionFile" name="QuestionFile" class="form-control-file" />
                </div>
            </div>
            <div class="form-group row">
                <label class="col-6 form-label"></label>
                <div class="col-6">
                    @{
                        string url = "";
                        if (string.IsNullOrEmpty(Model.QuestionImage))
                        {
                            url = "~/images/placehold.png";
                        }
                        else
                        {
                            url = Model.QuestionImage;
                        }
                    }
                    <img id="previewImage" src="@Url.Content(url)"
                         style="width: 100%;
                            height: 200px;
                            margin-top: -15px;
                            border: 3px solid #eeeeee;
                            border-radius: 15px;
                            object-fit: contain;" />
                </div>
            </div>
            <div class="form-group d-none">
                <label asp-for="QuestionImage" class="control-label"></label>
                <input asp-for="QuestionImage" class="form-control" />
                <span asp-validation-for="QuestionImage" class="text-danger"></span>
            </div>
            @* Đáp án A *@
            <div class="form-group row">
                <label class="col-6 form-label">Chọn loại đáp án (A)</label>
                <div class="col">
                    <div>
                        <input type="radio" id="textA" name="optionTypeA" value="text" onclick="toggleOptionInput('text', 'A')" @(isOptionAText ? "checked" : "")>
                        <label for="textA">Text</label>
                        <input type="radio" id="imageA" name="optionTypeA" value="image" onclick="toggleOptionInput('image', 'A')" @(!isOptionAText ? "checked" : "")>
                        <label for="imageA">Hình ảnh</label>
                    </div>
                </div>
            </div>
            <div id="textOptionA" class="form-group row @(isOptionAText ? "" : "hidden")">
                <label asp-for="OptionA" class="col-6 form-label">Đáp án A</label>
                <div class="col">
                    <input asp-for="OptionA" id="textOptionInputA" class="form-control" placeholder="Nhập đáp án" />
                    <span asp-validation-for="OptionA" class="text-danger form-text"></span>
                </div>
            </div>
            <div class="form-group d-none">
                <label asp-for="OptionAImage" class="control-label"></label>
                <input asp-for="OptionAImage" class="form-control" />
                <span asp-validation-for="OptionAImage" class="text-danger"></span>
            </div>
