@model SaRLAB.Models.Entity.Quiz

@{
    ViewData["Title"] = "Edit_Question";
    ViewBag.TitleCustom = "Chỉnh sửa câu hỏi";
    Layout = "~/Views/Home/_LayoutHome.cshtml";
}

<style>
    .hidden {
        display: none;
    }
</style>

@{
    bool isOptionAText = !string.IsNullOrEmpty(Model.OptionA);
    bool isOptionBText = !string.IsNullOrEmpty(Model.OptionB);
    bool isOptionCText = !string.IsNullOrEmpty(Model.OptionC);
    bool isOptionDText = !string.IsNullOrEmpty(Model.OptionD);
