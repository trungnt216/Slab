                                object-fit: contain;" />
                    </div>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="CorrectAnswer" class="col-6 form-label">Chọn đáp án đúng</label>
                <div class="col">
                    <select asp-for="CorrectAnswer" class="form-control">
                        <option value="">Chọn đáp án</option>
                        <option value="A">A</option>
                        <option value="B">B</option>
                        <option value="C">C</option>
                        <option value="D">D</option>
                    </select>
                    <span asp-validation-for="CorrectAnswer" class="text-danger form-text"></span>
                </div>
            </div>

            <div class="form-group d-none">
                <label asp-for="SchoolId" class="control-label"></label>
                <input asp-for="SchoolId" class="form-control" />
                <span asp-validation-for="SchoolId" class="text-danger"></span>
            </div>
            <div class="form-group d-none">
                <label asp-for="SubjectId" class="control-label"></label>
                <input asp-for="SubjectId" class="form-control" />
                <span asp-validation-for="SubjectId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.getElementById('QuestionFile').addEventListener('change', function (event) {
            var file = event.target.files[0];
            if (file) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    document.getElementById('previewImage').src = e.target.result;
                };
                reader.readAsDataURL(file);
            }
        });

        function addFileChangeListener(option, previewId) {
            document.getElementById(option).addEventListener('change', function (event) {
                var file = event.target.files[0];
                if (file) {
                    var reader = new FileReader();
                    reader.onload = function (e) {
                        document.getElementById(previewId).src = e.target.result;
                    };
                    reader.readAsDataURL(file);
                }
            });
        }

        addFileChangeListener('OptionAFile', 'previewImageA');
        addFileChangeListener('OptionBFile', 'previewImageB');
        addFileChangeListener('OptionCFile', 'previewImageC');
        addFileChangeListener('OptionDFile', 'previewImageD');

    </script>
     <script>
        function toggleOptionInput(option, answer) {
            var textOption = document.getElementById('textOption' + answer);
            var imageOption = document.getElementById('imageOption' + answer);
            var textInput = document.getElementById('textOptionInput' + answer);
            var imageInput = document.getElementById('Option' + answer + 'File');
            var imagePreview = document.getElementById('previewImage' + answer);

            if (option === 'text') {
                textOption.classList.remove('hidden');
                imageOption.classList.add('hidden');
                imageInput.value = "";
                imagePreview.src = "@Url.Content("~/images/placehold.png")";
            } else if (option === 'image') {
                textOption.classList.add('hidden');
                imageOption.classList.remove('hidden');
                textInput.value = "";
            }
        }
    </script>
}
