@model SaRLAB.Models.Entity.Quiz

@{
    ViewData["Title"] = "Create_Question";
    ViewBag.TitleCustom = "Thêm mới câu hỏi";
    Layout = "~/Views/Home/_LayoutHome.cshtml";
}

<style>
    .hidden {
        display: none;
    }
</style>

<div id="sub-content">
    <div class="d-flex justify-content-between">
        <partial name="TitleCustom">
            <a asp-area="" asp-controller="Chemistry" asp-action="GetAll_Question" class="btn-custom-return" type="button">
                <i class="fa-solid fa-angles-left"></i>
                Trở về
            </a>
    </div>
    <div class="form-container">
        <form asp-action="Create_Question" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group d-none">
                <label asp-for="ID" class="control-label"></label>
                <input asp-for="ID" class="form-control" />
                <span asp-validation-for="ID" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Question" class="col-6 form-label">Nội dung câu hỏi</label>
                <div class="col-6">
                    <input asp-for="Question" class="form-control" placeholder="Nhập câu hỏi" />
                    <span asp-validation-for="Question" class="text-danger form-text"></span>
                </div>
            </div>
            <div class="form-group row">
                <label for="File" class="col-6 form-label"> Chọn hỉnh ảnh cho câu hỏi (Nếu có)</label>
                <div class="col-6">
                    <input type="file" id="QuestionFile" name="QuestionFile" class="form-control-file" />
                </div>
            </div>
            <div class="form-group row">
                <label class="col-6 form-label"></label>
                <div class="col-6">
                    <img id="previewImage" src="@Url.Content("~/images/placehold.png")"
                         style="width: 300px;
                            height: 200px;
                            margin-top: -15px;
                            border: 3px solid #eeeeee;
                            border-radius: 15px;
                            object-fit: contain;" />
                </div>
            </div>
            <div class="form-group d-none">
                <label asp-for="QuestionImage" class="control-label"></label>
                <input asp-for="QuestionImage" class="form-control" />
                <span asp-validation-for="QuestionImage" class="text-danger"></span>
            </div>
            @*  dap an a *@
            <div class="form-group row">
                <label class="col-6 form-label">Chọn loại đáp án (A)</label>
                <div class="col">
                    <div>
                        <input type="radio" id="textA" name="optionTypeA" value="text" onclick="toggleOptionInput('text', 'A')" checked="checked">
                        <label for="text">Text</label>
                        <input type="radio" id="imageA" name="optionTypeA" value="image" onclick="toggleOptionInput('image', 'A')">
                        <label for="image">Hình ảnh</label>
                    </div>
                </div>
            </div>
            <div id="textOptionA" class="form-group row">
                <label asp-for="OptionA" class="col-6 form-label">Đáp án A</label>
                <div class="col">
                    <input asp-for="OptionA" id="textOptionInputA" class="form-control" placeholder="Nhập đáp án" />
                    <span asp-validation-for="OptionA" class="text-danger form-text"></span>
                </div>
            </div>
            <div id="imageOptionA" class="form-group hidden">
                <div class="form-group row">
                    <label for="File" class="col-6 form-label"> Chọn hình ảnh cho đáp án A</label>
                    <div class="col-6">
                        <input type="file" id="OptionAFile" name="OptionAFile" class="form-control-file" accept="image/*" />
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-6 form-label"></label>
                    <div class="col-6">
                        <img id="previewImageA" src="@Url.Content("~/images/placehold.png")"
                             style="    width: 300px;
                                height: 200px;
                                margin-top: -15px;
                                border: 3px solid #eeeeee;
                                border-radius: 15px;
                                object-fit: contain;" />
                    </div>
                </div>
            </div>

            @*  dap an b *@
            <div class="form-group row">
                <label class="col-6 form-label">Chọn loại đáp án (B)</label>
                <div class="col">
                    <div>
                        <input type="radio" id="textB" name="optionTypeB" value="text" onclick="toggleOptionInput('text','B')" checked="checked">
                        <label for="text">Text</label>
                        <input type="radio" id="imageB" name="optionTypeB" value="image" onclick="toggleOptionInput('image', 'B')">
                        <label for="image">Hình ảnh</label>
                    </div>
                </div>
            </div>
            <div id="textOptionB" class="form-group row">
